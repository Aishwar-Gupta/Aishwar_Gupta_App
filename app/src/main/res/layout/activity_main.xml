<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/id_imageView"
        android:layout_width="279dp"
        android:layout_height="313dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="50dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/pexels_sagui_andrea_618833"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/pexels_sagui_andrea_618833" />

    <TextView
        android:id="@+id/id_textView"
        android:layout_width="292dp"
        android:layout_height="59dp"
        android:layout_marginTop="10dp"
        android:text="@string/Intro_text"
        android:textColor="@color/purple_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_imageView" />

    <Button
        android:id="@+id/id_button"
        android:layout_width="120dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:text="@string/Button_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_textView" />

</androidx.constraintlayout.widget.ConstraintLayout>